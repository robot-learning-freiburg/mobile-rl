<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find modulation_rl)/gazebo_world/common/range_sensor/range.gazebo.xacro" />

  <xacro:macro name="range_sensor" params="name parent *origin ros_topic update_rate maxRange minRange fov radiation">
    <link name="${name}_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.001"/>
        <inertia ixx="0.000001" ixy="0" ixz="0"
                 iyy="0.000001" iyz="0"
                 izz="0.000001"/>
      </inertial>
<!--      <visual>-->
<!--        <origin xyz="0 0 0" rpy="0 0 0" />-->
<!--        <geometry>-->
<!--          <mesh filename="package://pmb2_description/meshes/sensors/srf05.stl"/>-->
<!--        </geometry>-->
<!--        <material name="DarkGrey"/>-->
<!--      </visual>-->
    </link>

    <joint name="${name}_joint" type="fixed">
      <xacro:insert_block name="origin"/>
      <axis xyz="0 0 1"/>
      <parent link="${parent}_link"/>
      <child link="${name}_link"/>
    </joint>

    <!-- gazebo extensions -->
    <xacro:range_gazebo name="${name}" ros_topic="${ros_topic}" update_rate="${update_rate}" maxRange="${maxRange}" minRange="${minRange}" fov="${fov}" radiation="${radiation}"/>
  </xacro:macro>
</robot>
